<div class="sheet-layout">

    <div class="sheet-basics">
        <label>Name</label><input type="text" name="attr_character_name" />
        <label>Erfolgsabzug</label><input type="number" step="1" name="attr_abzug" class="sheet-variable" value="0"/>
    </div>

    <div class="sheet-attributes">
        <h2>Attribute</h2>

        <div class="sheet-attributes-list">
            #% for abbreviation, name in attributes %#
            <label>#$ name $#</label>
            <input type="number" step="1" name="attr_#$ abbreviation $#" max="10"/>
            <button type='roll' name='roll_#$ abbreviation $#' value='&{template:adz} {{name=#$ name $#}} {{erfolge=[[(2*@{#$ abbreviation $#})d6>5 - @{abzug}]]}} {{abzug=@{abzug}}} {{wuerfel=[[2*@{#$ abbreviation $#}]]}}'></button>
            #% endfor %#
        </div>
    </div>

    <div class="sheet-magic">
        <h2>Techniken & Magiebereiche</h2>

        <table class="sheet-magic-matrix">
            <tr>
                <th></th>
                #% for technique in techniques %#
                <th>
                    <label>#$ technique $#</label>
                    <input type="number" step="1" name="attr_#$ technique | lower $#" max="10"/>
                </th>
                #% endfor %#
            </tr>
            #% for domain in domains %#
            <tr>
                <th>
                    <label>#$ domain $#</label>
                    <input type="number" step="1" name="attr_#$ domain | lower $#" max="10"/>
                </th>
                #% for technique in techniques %#
                <td>
                    <input type="number" step="1" name="attr_focus_#$ domain | lower $#_#$ technique | lower $#" max="10"/>
                </td>
                #% endfor %#
            </tr>
            #% endfor %#

        </div>
    </div>

    <rolltemplate class="sheet-rolltemplate-adz">
        <h1>{{name}}</h1>
        <p>{{erfolge}} Erfolge mit <span class="plain">{{wuerfel}}</span> Würfeln</p>
        <p class="note">Erfolgsabzug von {{abzug}} berücksichtigt.</p>
    </rolltemplate>

</div>
